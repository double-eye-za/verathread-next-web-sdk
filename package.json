{
  "name": "vth-sdk",
  "version": "1.0.1",
  "description": "Verathread Web SDK",
  "license": "MIT",
  "scripts": {
    "build:sass": "parcel build src/scss/index.scss",
    "docs": "npm-run-all docs-build",
    "docs-build": "hugo --cleanDestinationDir --printUnusedTemplates",
    "docs-compile": "npm run docs-build",  
    "docs-serve": "hugo server --port 9001 --disableFastRender --noHTTPCache --renderToMemory --printPathWarnings --printUnusedTemplates",
    "docs-serve-only": "npx sirv-cli _site --port 9001"
  },
  "devDependencies": {
    "@docsearch/js": "^3.6.0",
    "@parcel/transformer-sass": "2.12.0", 
    "@popperjs/core": "^2.11.8",
    "@stackblitz/sdk": "^1.11.0",
    "autoprefixer": "^10.4.19",
    "bootstrap": "^5.3.3",
    "clipboard": "^2.0.11",
    "hugo-bin": "^0.125.0",
    "hugo-extended": "^0.128.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.12.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.6",
    "sass-true": "^8.0.0"
  },
  "sass": {
    "includePaths": ["./node_modules"]
  }
}
